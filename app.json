{
  "expo": {
    "name": "Board Game Buddy",
    "slug": "game_tools",
    "platforms": ["ios", "android", "web"],
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#000000"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "bundleIdentifier": "com.gametools",
      "buildNumber": "1.0.0",
      "supportsTablet": true,
      "infoPlist": {
        "NSPhotoLibraryAddUsageDescription": "The app would like your permission to save your drawings to your photo library."
      }
    },
    "android": {
      "package": "com.gametools",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/android_icon.png",
        "backgroundImage": "./assets/android_background.png",
        "backgroundColor": "#fff"
      }
    }
  }
}
